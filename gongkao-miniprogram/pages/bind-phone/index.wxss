.bind-page {
  min-height: 100vh;
  background: #f5f5f5;
  display: flex;
  flex-direction: column;
}

.header {
  background: linear-gradient(180deg, #1890FF 0%, #40A9FF 100%);
  padding: 80rpx 48rpx 120rpx;
  text-align: center;
  border-radius: 0 0 48rpx 48rpx;
}

.icon-circle {
  width: 140rpx;
  height: 140rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 32rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 16rpx;
}

.desc {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

.content {
  flex: 1;
  padding: 48rpx;
  margin-top: -48rpx;
}

.tips-card {
  background: #FFFBE6;
  border: 1rpx solid #FFE58F;
  border-radius: 16rpx;
  padding: 24rpx 32rpx;
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
  margin-bottom: 48rpx;
}

.tips-card text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}

.auth-section .phone-btn {
  width: 100%;
  height: 88rpx;
  background: #1890FF;
  color: #fff;
  font-size: 32rpx;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.dev-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
}

.dev-tip {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 32rpx;
}

.dev-tip text {
  font-size: 26rpx;
  color: #666;
}

.footer {
  padding: 48rpx;
  text-align: center;
}

.footer-text {
  font-size: 24rpx;
  color: #999;
}
