/* pages/homework/index.wxss */
@import '../../styles/variables.wxss';

.page {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 40rpx;
}

/* Tab 切换 */
.tabs {
  display: flex;
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
  position: sticky;
  top: 0;
  z-index: 10;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 32rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab-item.active {
  color: var(--primary-color, #1677ff);
  font-weight: 500;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background-color: var(--primary-color, #1677ff);
  border-radius: 2rpx;
}

/* 加载状态 */
.loading-box {
  padding: 120rpx 0;
  text-align: center;
}

/* 作业列表 */
.homework-list {
  padding: 24rpx;
}

.homework-card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s;
}

.homework-card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.08);
}

.homework-card.completed {
  opacity: 0.85;
}

/* 卡片头部 */
.card-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.card-header .title {
  flex: 1;
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-right: 16rpx;
  line-height: 1.5;
}

/* 卡片内容 */
.card-body {
  margin-bottom: 24rpx;
}

.card-body .desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

/* 卡片底部 */
.card-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.deadline,
.submit-time {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #999;
}

.deadline text,
.submit-time text {
  margin-left: 8rpx;
}

.accuracy {
  font-size: 24rpx;
  color: #52c41a;
  font-weight: 500;
}

/* 空状态优化 */
.homework-list :deep(.van-empty) {
  padding: 120rpx 0;
}
