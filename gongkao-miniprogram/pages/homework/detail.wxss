/* pages/homework/detail.wxss */
@import '../../styles/variables.wxss';

.page {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 120rpx;
}

/* 加载状态 */
.loading-box {
  padding: 120rpx 0;
  text-align: center;
}

.detail-container {
  padding: 24rpx;
}

/* 状态头部 */
.status-header {
  background: linear-gradient(135deg, #ffa726 0%, #ff9800 100%);
  border-radius: 16rpx;
  padding: 48rpx 32rpx;
  text-align: center;
  color: #fff;
  margin-bottom: 24rpx;
}

.status-header.submitted {
  background: linear-gradient(135deg, #66bb6a 0%, #4caf50 100%);
}

.status-header .status-text {
  display: block;
  font-size: 32rpx;
  font-weight: 500;
  margin-top: 16rpx;
}

/* 标题区域 */
.title-section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
}

.title-section .title {
  display: block;
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  line-height: 1.5;
  margin-bottom: 16rpx;
}

/* 信息区域 */
.info-section,
.submission-info {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.info-item:last-child {
  border-bottom: none;
}

.info-item .label {
  font-size: 28rpx;
  color: #666;
}

.info-item .value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.info-item .value.success {
  color: #52c41a;
}

.info-item .deadline-text {
  color: #ff9800;
}

/* 作业说明 */
.description-section,
.submission-section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.description-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
}

/* 反馈内容 */
.feedback-item {
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.feedback-item:last-child {
  border-bottom: none;
}

.feedback-item .label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.feedback-content {
  background-color: #f5f5f5;
  border-radius: 8rpx;
  padding: 24rpx;
  font-size: 28rpx;
  color: #333;
  line-height: 1.8;
}

/* 底部操作栏 */
.footer-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  padding: 24rpx;
  border-top: 1rpx solid #f0f0f0;
  box-shadow: 0 -2rpx 8rpx rgba(0, 0, 0, 0.05);
}
