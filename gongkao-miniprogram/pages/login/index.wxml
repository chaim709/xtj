<view class="login-page">
  <!-- Logo区域 -->
  <view class="logo-section">
    <view class="logo-circle">
      <text class="logo-text">公考</text>
    </view>
    <view class="app-name">公考学员助手</view>
    <view class="app-desc">智能督学 · 高效学习</view>
  </view>

  <!-- 功能介绍 -->
  <view class="features">
    <view class="feature-item">
      <van-icon name="calendar-o" size="40rpx" color="#1890FF" />
      <text>课表查询</text>
    </view>
    <view class="feature-item">
      <van-icon name="video-o" size="40rpx" color="#1890FF" />
      <text>录播课程</text>
    </view>
    <view class="feature-item">
      <van-icon name="chat-o" size="40rpx" color="#1890FF" />
      <text>督学互动</text>
    </view>
    <view class="feature-item">
      <van-icon name="chart-trending-o" size="40rpx" color="#1890FF" />
      <text>学习报告</text>
    </view>
  </view>

  <!-- 登录按钮 -->
  <view class="login-section">
    <van-button
      type="primary"
      block
      round
      loading="{{loading}}"
      loading-text="登录中..."
      bind:click="handleLogin"
    >
      <van-icon name="wechat" style="margin-right: 16rpx;" />
      微信一键登录
    </van-button>
    
    <view class="agreement">
      登录即表示同意
      <text class="link">《用户协议》</text>
      和
      <text class="link">《隐私政策》</text>
    </view>
  </view>
</view>
