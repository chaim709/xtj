.page {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 24rpx;
}

.stats-card {
  background: linear-gradient(135deg, #1890FF 0%, #40A9FF 100%);
  border-radius: 24rpx;
  padding: 48rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin-bottom: 24rpx;
  color: #fff;
}

.stat-item {
  text-align: center;
}

.stat-value {
  font-size: 64rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 26rpx;
  opacity: 0.9;
}

.stat-divider {
  width: 2rpx;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.3);
}

.month-nav {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.month-text {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.calendar {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
}

.week-header {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  margin-bottom: 16rpx;
}

.week-day {
  text-align: center;
  font-size: 24rpx;
  color: #999;
  padding: 12rpx 0;
}

.calendar-body {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.calendar-week {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  gap: 8rpx;
}

.calendar-day {
  aspect-ratio: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  position: relative;
  font-size: 28rpx;
}

.day-num {
  color: #333;
}

.calendar-day.checked {
  background: #E6F7FF;
  color: #1890FF;
}

.calendar-day.checked .day-num {
  font-weight: bold;
  color: #1890FF;
}

.calendar-day.today {
  border: 2rpx solid #1890FF;
}

.check-mark {
  position: absolute;
  bottom: 4rpx;
  font-size: 20rpx;
  color: #52C41A;
}

.actions {
  padding: 24rpx 0;
}
