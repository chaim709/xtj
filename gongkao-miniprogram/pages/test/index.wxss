.container {
  padding: 60rpx 40rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #1890FF;
  text-align: center;
  margin-bottom: 60rpx;
}

.content {
  background: white;
  padding: 40rpx;
  border-radius: 16rpx;
  margin-bottom: 40rpx;
}

.content text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
}

.counter {
  background: white;
  padding: 40rpx;
  border-radius: 16rpx;
  margin-bottom: 40rpx;
  text-align: center;
  font-size: 32rpx;
  color: #1890FF;
  font-weight: bold;
}

button {
  margin-bottom: 40rpx;
}

.tips {
  background: #E6F7FF;
  padding: 30rpx;
  border-radius: 12rpx;
  border-left: 4rpx solid #1890FF;
}

.tips text {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
}
