.page {
  min-height: 100vh;
  background: #f5f5f5;
}

/* 筛选栏 */
.filter-bar {
  background: #fff;
  padding: 16rpx 0;
  position: sticky;
  top: 0;
  z-index: 10;
}

.filter-scroll {
  white-space: nowrap;
}

.filter-list {
  display: inline-flex;
  padding: 0 24rpx;
  gap: 16rpx;
}

.filter-item {
  display: inline-block;
  padding: 12rpx 32rpx;
  font-size: 26rpx;
  color: #666;
  background: #f5f5f5;
  border-radius: 32rpx;
  transition: all 0.3s;
}

.filter-item.active {
  background: #1890FF;
  color: #fff;
}

/* 统计栏 */
.stats-bar {
  padding: 16rpx 24rpx;
  font-size: 24rpx;
  color: #999;
}

/* 加载状态 */
.loading-container {
  display: flex;
  justify-content: center;
  padding: 100rpx 0;
}

/* 录播课列表 */
.recording-list {
  padding: 0 24rpx 24rpx;
}

.recording-card {
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.card-cover {
  height: 200rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.play-icon {
  width: 100rpx;
  height: 100rpx;
  background: rgba(0, 0, 0, 0.3);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.duration {
  position: absolute;
  right: 16rpx;
  bottom: 16rpx;
  background: rgba(0, 0, 0, 0.6);
  color: #fff;
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.card-info {
  padding: 20rpx;
}

.title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 12rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.meta {
  display: flex;
  gap: 24rpx;
  margin-bottom: 12rpx;
}

.meta-item {
  display: flex;
  align-items: center;
  gap: 6rpx;
  font-size: 24rpx;
  color: #999;
}

.teacher {
  display: flex;
  align-items: center;
  gap: 6rpx;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.subject-tag {
  display: inline-block;
}

/* 加载更多 */
.load-more {
  display: flex;
  justify-content: center;
  padding: 32rpx 0;
}

.no-more {
  text-align: center;
  padding: 32rpx 0;
  font-size: 24rpx;
  color: #999;
}
